<% layout('layout/boilerplate') -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Create new Listing</h3>
                <form action="/" method="POST" enctype="multipart/form-data" class="p-4 needs-validation"
                    novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" class="form-control" name="Listing[title]"
                            placeholder="Add a catchy title" required>
                        <div class="invalid-feedback">
                            Please provide a title.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" class="form-control" name="Listing[description]"
                            placeholder="Enter description" rows="5" required></textarea>
                        <div class="invalid-feedback">
                            Please provide a description.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input type="file" id="image" class="form-control" name="Listing[image]">
                        <div class="invalid-feedback">
                            Please provide a valid image URL.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="category">Category</label>
                        <select class="form-select" id="category" name="Listing[category]" aria-label="Default select example">
                            <option value="" disable selected>Open this select menu</option>
                            <option value="Trending">Trending</option>
                            <option value="Amazing views">Amazing views</option>
                            <option value="Iconic cities">Iconic cities</option>
                            <option value="Surfing">Surfing</option>
                            <option value="Amazing pools">Amazing pools</option>
                            <option value="Beach">Beach</option>
                            <option value="Cabins">Cabins</option>
                            <option value="Lakefront">Lakefront</option>
                            <option value="Castles">Castles</option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" id="price" class="form-control" name="Listing[price]"
                                placeholder="1200" required>
                            <div class="invalid-feedback">
                                Please provide a valid price.
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" id="country" class="form-control" name="Listing[country]"
                                placeholder="Pakistan" required>
                            <div class="invalid-feedback">
                                Please provide a country.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" class="form-control" name="Listing[location]"
                            placeholder="Sabir Town, Sahiwal" required>
                        <div class="invalid-feedback">
                            Please provide a location.
                        </div>
                    </div>

                    <button type="submit" class="btn btn-danger">Add</button>
                </form>
            </div>
        </div>
    </body>