<% layout('layout/boilerplate') -%>


    <div id="filters" class="row ">
        <div class="mx-auto col-10 col-md-8  ">
            <div class="slider">
                <a href="/?category=Trending">
                    <div class="filter">
                        <div><i class="fa-solid fa-fire"></i></div>
                        <p>Trending</p>
                    </div>
                </a>

                <a href="/?category=Rooms">
                    <div class="filter">
                        <div><i class="fa-solid fa-bed"></i></div>
                        <p>Rooms</p>
                    </div>
                </a>

                <a href="/?category=Amazing views">
                    <div class="filter">
                        <div><i class="fa-duotone fa-window-frame-open"></i></div>
                        <p>Amazing views</p>
                    </div>
                </a>

                <a href="/?category=Iconic cities">
                    <div class="filter">
                        <div><i class="fa-solid fa-mountain-city"></i></div>
                        <p>Iconic cities</p>
                    </div>
                </a>

                <a href="/?category=Surfing">
                    <div class="filter">
                        <div><i class="fa-solid fa-scalpel-line-dashed"></i></div>
                        <p>Surfing</p>
                    </div>
                </a>

                <a href="/?category=Amazing pools">
                    <div class="filter">
                        <div><i class="fa-duotone fa-person-swimming"></i></div>
                        <p>Amazing pools</p>
                    </div>
                </a>

                <a href="/?category=Beach">
                    <div class="filter">
                        <div><i class="fa-solid fa-umbrella-beach"></i></div>
                        <p>Beach</p>
                    </div>
                </a>

                <a href="/?category=Cabins">
                    <div class="filter">
                        <div><i class="fa-solid fa-cabin"></i></div>
                        <p>Cabins</p>
                    </div>
                </a>

                <a href="/?category=Lakefront">
                    <div class="filter">
                        <div><i class="fa-solid fa-warehouse"></i></div>
                        <p>Lakefront</p>
                    </div>
                </a>

                <a href="/?category=Castles">
                    <div class="filter">
                        <div><i class="fa-solid fa-castle"></i></div>
                        <p>Castles</p>
                    </div>
                </a>
            </div>
        </div>

        <div class="ms-md-auto mb-3 ms-2 col-11 col-md-3">
            <div class="tax-toggle  mt-3 ">
                <div class="form-check-reverse  form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label ms-md-0 ps-md-0 ms-sm-5 ps-sm-5  ps-3 ms-3 " for="switchCheckDefault">Display total before taxes</label>
                </div>
            </div>
        </div>


        <div class="row  row-cols-md-3 row-cols-sm-2 row-cols-xs-1">
            <% for(let listing of allListings){ %>
                <a class="listing-link" href="/<%=listing._id%>">
                    <div class="card col listing-card">
                        <img src="<%=listing.image.url%>" class="card-img-top" style="height: 20rem;" alt="...">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=listing.title%>
                                </b><br>
                                <%= listing.price !=null ? listing.price.toLocaleString("en-PK", { style: "currency" ,
                                    currency: "PKR" }) : "Price not available" %> / night <i class="tax-info"> &nbsp;
                                        &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>
    </div>